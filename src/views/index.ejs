<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <link rel="stylesheet" href="/style.css" />
        <style>
            body { font-family: 'Segoe UI', Arial, sans-serif; background: #f7f7fa; margin: 0; padding: 0; }
            .container { max-width: 600px; margin: 40px auto; background: #fff; border-radius: 16px; box-shadow: 0 2px 16px rgba(0,0,0,0.07); padding: 32px 24px; }
            h1 { text-align: center; margin-bottom: 32px; font-size: 2rem; }
            .bot-list { list-style: none; padding: 0; margin: 0; }
            .bot-item { margin-bottom: 28px; padding: 18px 16px; border-radius: 10px; background: #f0f4ff; box-shadow: 0 1px 4px rgba(0,0,0,0.03); }
            .bot-title { font-size: 1.2rem; font-weight: 600; margin-bottom: 6px; }
            .bot-link { color: #2a7be4; text-decoration: none; font-weight: 500; }
            .bot-link:hover { text-decoration: underline; }
            .bot-desc { color: #444; font-size: 1rem; margin-top: 2px; }
            .footer { text-align: center; margin-top: 32px; color: #888; font-size: 1.1rem; }
        </style>
    </head>
    <body>
        <div class="container">
            <h1><%= title %></h1>
            <ul class="bot-list">
                <% bots.forEach(function(bot, idx) { %>
                    <li class="bot-item">
                        <div class="bot-title"><%= idx+1 %>. <%= bot.name %></div>
                        <a class="bot-link" href="<%= bot.link %>" target="_blank">@<%= bot.username %></a>
                        <div class="bot-desc"><%= bot.description %></div>
                    </li>
                <% }) %>
            </ul>
            <div class="footer"><%= footer %></div>
        </div>
    </body>
</html>
